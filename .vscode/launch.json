{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Angular App (Remote Debug)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "http://localhost:4200/*",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Launch Chrome for Angular",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/src",
      "runtimeArgs": ["--remote-debugging-port=9222"]
    }
  ],
  "compounds": [
    {
      "name": "Launch & Attach to Angular",
      "configurations": ["Launch Chrome for Angular", "Attach to Angular App (Remote Debug)"],
      "stopAll": true
    }
  ]
}
